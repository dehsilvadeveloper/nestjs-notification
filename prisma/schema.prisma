// This is your Prisma schema file. Learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("SQLITE_DB_URL")
}

// MODELS

model Notification {
  id          String    @id
  recipientId String
  content     String
  category    String
  createdAt   DateTime  @default(now())
  readAt      DateTime?
  canceledAt  DateTime?

  @@index([recipientId])
  @@map(name: "notification")
}
